<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.4rem;
    vertical-align: middle;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .search-form {
      flex-direction: column;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .navbar-collapse {
      background-color: #fff;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }

    .navbar-nav .nav-link {
      font-weight: bold;
      background-color: #f8f9fa;
      border-radius: 8px;
      margin: 0.3rem 0;
    }

    .navbar-nav .nav-link:hover {
      background-color: #ffecec;
      color: #fe424d;
    }
    @media (min-width: 768px) {
  .nav-link {
    margin-right: 1rem;
  }
}

  }
</style>


<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top px-3">
  <div class="container-fluid d-flex align-items-center justify-content-between">
    <!-- Logo + Explore -->
    <div class="d-flex align-items-center">
      <a class="navbar-brand me-2" href="/listings">
        <i class="fa-regular fa-compass"></i>
      </a>
      <a class="nav-link d-none d-md-block me-4" href="/listings">Explore</a>
    </div>

    <!-- Centered Search Bar (Desktop only) -->
    <form class="d-none d-md-flex search-form mx-auto" style="max-width: 500px; width: 100%; flex: 0 1 auto;" role="search">
      <input class="form-control search-input me-2" type="search" placeholder="Search destinations" aria-label="Search" />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>Search
      </button>
    </form>

    <!-- Toggler and Auth Links -->
    <div class="d-flex align-items-center">
      <button class="navbar-toggler ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>

    <!-- Collapsible Content -->
    <div class="collapse navbar-collapse justify-content-end mt-3 mt-md-0" id="navbarContent">
      <ul class="navbar-nav ms-auto text-center text-md-start">
        <!-- Mobile: Explore -->
        <li class="nav-item d-md-none">
          <a class="nav-link" href="/listings">Explore</a>
        </li>

        <!-- Mobile Search -->
        <li class="nav-item d-md-none px-3">
          <form class="search-form w-100" role="search">
            <input class="form-control search-input mb-2" type="search" placeholder="Search destinations" />
            <button class="btn search-btn w-100" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i>Search
            </button>
          </form>
        </li>

        <!-- Auth Buttons -->
        <li class="nav-item">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
        </li>
        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Log in</b></a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Log out</b></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
