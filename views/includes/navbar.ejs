<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.25rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 2.5rem;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .search-form {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .search-input,
    .search-btn {
      width: 100%;
    }

    .auth-links a {
      margin-bottom: 0.5rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Toggle for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <!-- Left nav -->
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>

      <!-- Desktop Search Bar -->
      <div class="ms-md-auto my-2 my-md-0 d-none d-md-block" style="max-width: 500px; width: 100%;">
        <form class="d-flex search-form" role="search">
          <input class="form-control me-2 search-input" type="search" placeholder="Search destinations" aria-label="Search" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>

      <!-- Auth buttons (desktop only) -->
      <div class="navbar-nav ms-md-3 d-none d-md-flex">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>

      <!-- Mobile Search + Auth -->
      <div class="d-block d-md-none w-100 mt-3">
        <!-- Search bar (mobile) -->
        <form class="search-form" role="search">
          <input class="form-control search-input" type="search" placeholder="Search destinations" aria-label="Search" />
          <button class="btn search-btn mt-2" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>

        <!-- Auth buttons (mobile) -->
        <div class="auth-links mt-3">
          <a class="nav-link" href="/listings/new">Airbnb your home</a>
          <% if (!currUser) { %>
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
            <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } else { %>
            <a class="nav-link" href="/logout"><b>Log out</b></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</nav>

