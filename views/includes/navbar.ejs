<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0.5rem 1.5rem;
    font-weight: 500;
    white-space: nowrap;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.4rem;
    vertical-align: middle;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 1rem;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .search-form {
      flex-direction: column;
      gap: 0.5rem;
      margin-top: 1rem;
    }

    .navbar-collapse {
      background-color: #fff;
      padding: 1rem;
      border-radius: 12px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
    }

    .navbar-nav .nav-link {
      font-weight: bold;
      background-color: #f8f9fa;
      border-radius: 8px;
      margin: 0.3rem 0;
    }
  }
  @media (min-width: 768px) {
    .nav-link {
      margin-right: 1rem;
      transition: background 0.2s, opacity 0.2s;
    }
    .nav-link:hover {
      background-color: #f8f9fa;
      opacity: 0.95;
      cursor: pointer;
      border-radius: 8px;
    }
  }
  .navbar-toggler {
    border: none;
    background: none;
  }
  @media (max-width: 768px) {
    .navbar-toggler {
      width: 32px;
      height: 32px;
      padding: 2px;
    }
    .navbar-toggler-icon {
      width: 24px;
      height: 24px;
    }
    .navbar-brand {
      padding-left: 0.25rem;
    }
    .search-input {
      font-size: 1.1rem;
      height: 2.5rem;
      border-radius: 25px !important;
      min-width: 0;
      width: 100%;
      padding-right: 2.5rem;
      text-overflow: ellipsis;
      box-shadow: none !important;
      outline: none !important;
      border: 1px solid #ccc;
    }
    .search-input:focus {
      box-shadow: none !important;
      outline: none !important;
      border: 1.5px solid #bbb;
    }
    .input-group {
      flex-wrap: nowrap;
      width: 100%;
      position: static;
    }
    .input-group .btn {
      position: static;
      border-radius: 50% !important;
      width: 2.5rem;
      height: 2.5rem;
      min-width: 2.5rem;
      min-height: 2.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.2rem;
      background: #fe424d;
      color: #fff;
      border: none;
      z-index: 2;
      padding: 0;
      margin-left: 0.5rem;
    }
  }
</style>


<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top px-3">
  <div class="container-fluid d-flex align-items-center justify-content-between p-0">
    <!-- Mobile: Logo, Search, Collapse Button -->
    <div class="d-flex w-100 align-items-center d-md-none" style="min-height:56px;">
      <a class="navbar-brand p-0" href="/listings" style="flex:0 0 auto; margin-right: 0.75rem;">
        <i class="fa-solid fa-home" style="color: #fe424d; font-size: 2rem;"></i>
      </a>
      <form class="d-flex flex-grow-1 mx-2" style="max-width: 100%;" role="search" method="GET" action="/listings">
        <div class="input-group w-100">
          <input class="form-control search-input" type="search" name="search" placeholder="Search destinations" aria-label="Search" value="<%= typeof search !== 'undefined' ? search : '' %>" style="font-size:1rem;" />
          <button class="btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </div>
      </form>
      <button class="navbar-toggler p-1" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" style="width:32px; height:32px; margin-left: 0.75rem;">
        <span class="navbar-toggler-icon" style="width:24px; height:24px;"></span>
      </button>
    </div>
    <!-- Desktop: Logo + Explore + Search + Auth Links (unchanged) -->
    <div class="d-none d-md-flex align-items-center w-100 justify-content-between">
      <div class="d-flex align-items-center">
        <a class="navbar-brand me-2" href="/listings">
          <i class="fa-solid fa-home" style="color: #fe424d;"></i>
        </a>
        <a class="nav-link d-none d-md-block me-4" href="/listings">Explore</a>
      </div>
      <form class="d-none d-md-flex search-form ms-4" style="max-width: 400px; width: 100%;" role="search" method="GET" action="/listings">
        <input class="form-control search-input me-2" type="search" name="search" placeholder="Search destinations" aria-label="Search" value="<%= typeof search !== 'undefined' ? search : '' %>" />
        <button class="btn search-btn" type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>Search
        </button>
      </form>
      <div class="d-flex align-items-center">
        <!-- Auth Links (desktop) -->
        <a class="nav-link" href="/listings/new">HomyGo host</a>
        <% if(!currUser) { %>
        <a class="nav-link"  href="/signup"><b>Sign up</b></a>
        <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %>
        <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
    <!-- Collapsible Content (unchanged) -->
    <div class="collapse navbar-collapse justify-content-end mt-3 mt-md-0" id="navbarContent">
      <ul class="navbar-nav ms-auto text-center text-md-start">
        <li class="nav-item d-md-none">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
        <li class="nav-item d-md-none">
          <a class="nav-link" href="/listings/new">HomyGo host</a>
        </li>
        <% if (!currUser) { %>
          <li class="nav-item">
            <a class="nav-link" href="/signup"><b>Sign up</b></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login"><b>Log in</b></a>
          </li>
        <% } else { %>
          <li class="nav-item">
            <a class="nav-link" href="/logout"><b>Log out</b></a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
