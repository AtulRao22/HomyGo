<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    margin-right: 0.25rem;
  }

  .search-input {
    border-radius: 25px;
    padding: 0.5rem 2.5rem;
    font-size: 1rem;
  }

  @media (max-width: 768px) {
    .search-form {
      display: flex;
      flex-direction: row;
      gap: 0.5rem;
      align-items: center;
    }

    .auth-links a {
      margin-bottom: 0.5rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top px-3">
  <div class="container-fluid d-flex align-items-center">
    <!-- Brand -->
    <a class="navbar-brand d-flex align-items-center me-2" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <!-- Explore -->
    <a class="nav-link d-md-inline me-2" href="/listings">Explore</a>

    <!-- Search form (always visible) -->
    <form class="d-flex search-form me-auto" role="search" style="max-width: 400px; flex: 1;">
      <input class="form-control search-input me-2" type="search" placeholder="Search destinations" aria-label="Search" />
      <button class="btn search-btn" type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>Search
      </button>
    </form>

    <!-- Mobile toggle -->
    <button class="navbar-toggler ms-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse mt-3 mt-md-0" id="navbarContent">
      <div class="navbar-nav ms-md-auto auth-links">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if (!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } else { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
