<% layout("layouts/boilerplate") -%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    padding: 1rem 0;
    align-items: center;
  }
  
  .filter{
    text-align: center;
    opacity: 0.8;
    min-width: 70px;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .filter:hover{
    opacity: 1;
    cursor: pointer;
    background-color: #f8f9fa;
  }
  
  .filter p {
    font-size: 0.7rem;
    margin: 0.25rem 0 0 0;
  }
  
  .filter i {
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }
  
  .tax-info{
    display: none;
  }
  
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-left: auto;
  }
  
  /* Mobile Responsive Styles */
  @media (max-width: 768px) {
    #filters {
      flex-direction: column;
      gap: 0.5rem;
      padding: 0.5rem 0;
    }
    
    .filter {
      text-align: center;
      min-width: 60px;
      padding: 0.5rem;
      margin: 0;
      background-color: #f8f9fa;
      border-radius: 8px;
    }
    
    .filter i {
      font-size: 1rem;
      margin-bottom: 0.25rem;
    }
    
    .filter p {
      font-size: 0.7rem;
      margin: 0;
      font-weight: 500;
    }
    
    .tax-toggle {
      margin-top: 0.5rem;
      height: auto;
      padding: 0.75rem 1rem;
      border-radius: 12px;
      background-color: #f8f9fa;
      width: 80%;
    }
    
    .tax-toggle .form-check-label {
      font-size: 0.9rem;
      font-weight: 500;
      white-space: nowrap;
    }
  }
  
  /* Tablet Styles */
  @media (min-width: 769px) and (max-width: 1024px) {
    #filters {
      gap: 0.75rem;
    }
    
    .filter {
      flex: 0 0 auto;
      min-width: 80px;
      margin-right: 1rem;
    }
  }
  
  .active-filter {
    background-color: #e0e0e0;
    opacity: 1;
    font-weight: bold;
  }
  
  .mobile-filter {
    flex: 1 1 0;
    min-width: 0;
    margin: 0;
    text-align: center;
    padding: 1rem 0.25rem;
    font-size: 1.1rem;
  }
  .mobile-filter-left {
    margin-left: 0.5rem;
  }
  .mobile-filter-right {
    margin-right: 0.5rem;
  }
  @media (max-width: 768px) {
    .d-md-none.d-flex {
      gap: 0.75rem;
    }
    .mobile-filter {
      padding: 0.6rem 0.25rem;
      min-width: 60px;
      font-size: 1rem;
    }
    .tax-toggle {
      width: 95%;
      margin-left: auto;
      margin-right: auto;
    }
  }
  .filter {
    text-decoration: none !important;
    color: inherit;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }
  .filter:hover {
    opacity: 1;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    transform: scale(1.05);
    background-color: #f8f9fa;
    cursor: pointer;
  }
</style>

 <div id="filters">
  <!-- Desktop Filters -->
  <div class="d-none d-md-flex flex-wrap" style="gap: 0.5rem;">
    <a href="/listings" class="filter <%= (!category) ? 'active-filter' : '' %>">All</a>
    <a href="/listings?category=Trending" class="filter <%= (category === 'Trending') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-fire"></i></div> 
      <p>Trending</p>
    </a>
    <a href="/listings?category=Rooms" class="filter <%= (category === 'Rooms') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-bed"></i></div> 
      <p>Rooms</p>
    </a>
    <a href="/listings?category=Iconic Cities" class="filter <%= (category === 'Iconic Cities') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-city"></i></div> 
      <p>Iconic Cities</p>
    </a>
    <a href="/listings?category=Mountains" class="filter <%= (category === 'Mountains') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-mountain-sun"></i></div> 
      <p>Mountains</p>
    </a>
    <a href="/listings?category=Castles" class="filter <%= (category === 'Castles') ? 'active-filter' : '' %>">
     <div><i class="fa-brands fa-fort-awesome"></i></div> 
      <p>Castles</p>
    </a>
    <a href="/listings?category=Amazing Pools" class="filter <%= (category === 'Amazing Pools') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-person-swimming"></i></div> 
      <p>Amazing Pools</p>
    </a>
    <a href="/listings?category=Camping" class="filter <%= (category === 'Camping') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-campground"></i></div> 
      <p>Camping</p>
    </a>
    <a href="/listings?category=Farms" class="filter <%= (category === 'Farms') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-cow"></i></div> 
      <p>Farms</p>
    </a>
    <a href="/listings?category=Arctic" class="filter <%= (category === 'Arctic') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-snowman"></i></div> 
      <p>Arctic</p>
    </a>
    <a href="/listings?category=Boats" class="filter <%= (category === 'Boats') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-sailboat"></i></div> 
      <p>Boats</p>
    </a>
    <a href="/listings?category=Photography" class="filter <%= (category === 'Photography') ? 'active-filter' : '' %>">
     <div><i class="fa-solid fa-camera"></i></div> 
      <p>Photography</p>
    </a>
    <a href="/listings?category=Services" class="filter <%= (category === 'Services') ? 'active-filter' : '' %>">
    <div><i class="fa-solid fa-bell-concierge"></i></div> 
      <p>Services</p>
    </a> 
  </div>

  <!-- Mobile Filters Horizontal -->
  <div class="d-md-none d-flex justify-content-between" style="gap: 0.5rem; padding: 0 0.5rem;">
    <a href="/listings" class="filter <%= (!category) ? 'active-filter' : '' %> mobile-filter mobile-filter-left">All</a>
    <a href="/listings?category=Trending" class="filter <%= (category === 'Trending') ? 'active-filter' : '' %> mobile-filter"> 
     <div><i class="fa-solid fa-fire"></i></div> 
      <p>Trending</p>
    </a>
    <a href="/listings?category=Mountains" class="filter <%= (category === 'Mountains') ? 'active-filter' : '' %> mobile-filter"> 
     <div><i class="fa-solid fa-mountain-sun"></i></div> 
      <p>Mountains</p>
    </a>
    <a href="/listings?category=Services" class="filter <%= (category === 'Services') ? 'active-filter' : '' %> mobile-filter mobile-filter-right"> 
    <div><i class="fa-solid fa-bell-concierge"></i></div> 
      <p>Services</p>
    </a> 
  </div>

  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
  <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">
      <span class="d-none d-md-inline">Display total after taxes</span>
      <span class="d-md-none">Display total after GST and other taxes</span>
    </label>
</div>
  </div>
 </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let listing of allListing) { %>
       <a href="/listings/<%= listing._id%>" class="listing-link">
  <div class="card col listing-card">
  <img src="<%= listing.image.url %>" 
    class="card-img-top" 
    alt="listing_image" 
    style="height: 20rem;"/>
<div class="card-img-overlay">&copy;WanderLust</div>
  <div class="card-body">
    <p class="card-text">
        <b><%= listing.title %></b> <br/>
         &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
         <i class="tax-info">&nbsp;+18% GST</i>
    </p>
  </div>
</div>
            </a>
<% } %>
</div>


<script>
  let taxSwitch = document.getElementById("switchCheckDefault");
  taxSwitch.addEventListener("click", () => {
    let taxInfo = document.getElementsByClassName("tax-info");
    for(info of taxInfo) {
      if(info.style.display != "inline") {
      info.style.display = "inline";
    } else {
      info.style.display = "none";
    }
   }
  });


</script>