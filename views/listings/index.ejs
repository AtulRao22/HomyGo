<% layout("layouts/boilerplate") -%>

<style>
  #filters {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    padding: 1rem 0;
  }
  
  .filter{
    text-align: center;
    opacity: 0.8;
    min-width: 80px;
    padding: 0.5rem;
    border-radius: 8px;
    transition: all 0.3s ease;
  }
  
  .filter:hover{
    opacity: 1;
    cursor: pointer;
    background-color: #f8f9fa;
  }
  
  .filter p {
    font-size: 0.8rem;
    margin: 0.25rem 0 0 0;
  }
  
  .filter i {
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
  }
  
  .tax-info{
    display: none;
  }
  
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-left: auto;
  }
  
  /* Mobile Responsive Styles */
  @media (max-width: 768px) {
    #filters {
      flex-direction: column;
      gap: 0.5rem;
      padding: 0.5rem 0;
    }
    
    .filter {
      display: flex;
      align-items: center;
      justify-content: flex-start;
      text-align: left;
      min-width: auto;
      padding: 0.75rem 1rem;
      margin: 0;
      background-color: #f8f9fa;
      border-radius: 12px;
    }
    
    .filter i {
      font-size: 1.1rem;
      margin-right: 0.75rem;
      margin-bottom: 0;
      min-width: 20px;
    }
    
    .filter p {
      font-size: 0.9rem;
      margin: 0;
      font-weight: 500;
    }
    
    .tax-toggle {
      margin-top: 0.5rem;
      height: auto;
      padding: 0.75rem 1rem;
      border-radius: 12px;
      background-color: #f8f9fa;
    }
    
    .tax-toggle .form-check-label {
      font-size: 0.9rem;
      font-weight: 500;
    }
  }
  
  /* Tablet Styles */
  @media (min-width: 769px) and (max-width: 1024px) {
    #filters {
      gap: 0.75rem;
    }
    
    .filter {
      min-width: 70px;
      margin-right: 1rem;
    }
  }
</style>

